<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dp_16"
    android:background="#eadddd"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageFoodLayout"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="3dp"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:civ_border_color="@color/color_background"
            android:src="@drawable/im_table" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameFoodLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="start"
                android:textStyle="bold"
                android:text="Name Food"
                android:textSize="18sp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/textViewDesFoodLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="3"
                android:gravity="start"
                android:textColor="#454343"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Describe" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>